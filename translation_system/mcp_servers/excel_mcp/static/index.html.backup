<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Excel MCP Server - Test Page</title>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            padding: 20px;
            min-height: 100vh;
        }
        .container {
            max-width: 1400px;
            margin: 0 auto;
            background: white;
            border-radius: 12px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.1);
            overflow: hidden;
        }
        .header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 30px;
            text-align: center;
        }
        .header h1 { font-size: 28px; margin-bottom: 10px; }
        .header p { opacity: 0.9; }

        .section {
            padding: 30px;
            border-bottom: 1px solid #e5e7eb;
        }
        .section:last-child { border-bottom: none; }
        .section h2 {
            font-size: 20px;
            margin-bottom: 20px;
            color: #1f2937;
            display: flex;
            align-items: center;
        }
        .section h2::before {
            content: "";
            width: 4px;
            height: 20px;
            background: #667eea;
            margin-right: 10px;
            border-radius: 2px;
        }

        .form-group {
            margin-bottom: 20px;
        }
        .form-group label {
            display: block;
            margin-bottom: 8px;
            color: #374151;
            font-weight: 500;
        }
        .form-group input,
        .form-group select,
        .form-group textarea {
            width: 100%;
            padding: 10px 12px;
            border: 1px solid #d1d5db;
            border-radius: 6px;
            font-size: 14px;
            transition: border-color 0.2s;
        }
        .form-group input:focus,
        .form-group select:focus,
        .form-group textarea:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102,126,234,0.1);
        }
        .form-group textarea {
            min-height: 80px;
            font-family: monospace;
            resize: vertical;
        }

        .btn {
            padding: 10px 20px;
            border: none;
            border-radius: 6px;
            font-size: 14px;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.2s;
            margin-right: 10px;
            margin-bottom: 10px;
        }
        .btn-primary {
            background: #667eea;
            color: white;
        }
        .btn-primary:hover {
            background: #5568d3;
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(102,126,234,0.3);
        }
        .btn-secondary {
            background: #6b7280;
            color: white;
        }
        .btn-secondary:hover {
            background: #4b5563;
        }
        .btn-success {
            background: #10b981;
            color: white;
        }
        .btn-success:hover {
            background: #059669;
        }

        .response-box {
            background: #f9fafb;
            border: 1px solid #e5e7eb;
            border-radius: 6px;
            padding: 15px;
            margin-top: 15px;
            max-height: 400px;
            overflow-y: auto;
        }
        .response-box pre {
            white-space: pre-wrap;
            word-wrap: break-word;
            font-family: 'Courier New', monospace;
            font-size: 13px;
            margin: 0;
        }

        .status-badge {
            display: inline-block;
            padding: 4px 12px;
            border-radius: 12px;
            font-size: 12px;
            font-weight: 600;
            margin-bottom: 10px;
        }
        .status-queued {
            background: #dbeafe;
            color: #1e40af;
        }
        .status-processing {
            background: #fef3c7;
            color: #92400e;
        }
        .status-completed {
            background: #d1fae5;
            color: #065f46;
        }
        .status-failed {
            background: #fee2e2;
            color: #991b1b;
        }

        .progress-bar {
            width: 100%;
            height: 30px;
            background: #e5e7eb;
            border-radius: 15px;
            overflow: hidden;
            margin: 15px 0;
        }
        .progress-fill {
            height: 100%;
            background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
            transition: width 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 600;
            font-size: 13px;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            gap: 15px;
            margin-top: 15px;
        }
        .stat-card {
            background: #f9fafb;
            border: 1px solid #e5e7eb;
            border-radius: 8px;
            padding: 15px;
            text-align: center;
        }
        .stat-value {
            font-size: 24px;
            font-weight: 700;
            color: #667eea;
            margin-bottom: 5px;
        }
        .stat-label {
            font-size: 12px;
            color: #6b7280;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .sheet-list {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            margin-top: 15px;
        }
        .sheet-item {
            background: #f3f4f6;
            border: 1px solid #d1d5db;
            padding: 8px 16px;
            border-radius: 6px;
            cursor: pointer;
            transition: all 0.2s;
        }
        .sheet-item:hover {
            background: #667eea;
            color: white;
            border-color: #667eea;
        }

        .file-upload-area {
            border: 2px dashed #d1d5db;
            border-radius: 8px;
            padding: 30px;
            text-align: center;
            cursor: pointer;
            transition: all 0.2s;
            margin-bottom: 20px;
        }
        .file-upload-area:hover {
            border-color: #667eea;
            background: #f9fafb;
        }
        .file-upload-area.dragover {
            border-color: #667eea;
            background: #eff6ff;
        }

        .info-box {
            background: #eff6ff;
            border-left: 4px solid #3b82f6;
            padding: 12px 16px;
            margin: 15px 0;
            border-radius: 4px;
        }
        .info-box strong {
            color: #1e40af;
        }

        .table-container {
            overflow-x: auto;
            margin-top: 15px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            font-size: 13px;
        }
        th, td {
            padding: 10px;
            text-align: left;
            border: 1px solid #e5e7eb;
        }
        th {
            background: #f9fafb;
            font-weight: 600;
            color: #374151;
        }
        tr:hover {
            background: #f9fafb;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>üìä Excel MCP Server</h1>
            <p>Test Interface for Excel Analysis and Processing</p>
        </div>

        <!-- Section 1: Configuration -->
        <div class="section">
            <h2>‚öôÔ∏è Configuration</h2>
            <div class="form-group">
                <label>Token:</label>
                <textarea id="tokenInput" placeholder="Enter your token here"></textarea>
            </div>
            <div class="info-box">
                <strong>üí° ÂºÄÂèëÊµãËØï Token:</strong> Áõ¥Êé•ËæìÂÖ• <code>test_token_123</code><br>
                <strong>üìù ËØ¥Êòé:</strong> Ê≠§ token Âú® <code>backend_service/tokens.json</code> ‰∏≠ÈÖçÁΩÆ
            </div>
        </div>

        <!-- Section 2: Upload/Analyze Excel -->
        <div class="section">
            <h2>üì§ Step 1: Upload & Analyze Excel</h2>

            <!-- Tab selection -->
            <div style="margin-bottom: 20px;">
                <button class="btn btn-secondary" onclick="showTab('url')">üìé Use URL</button>
                <button class="btn btn-secondary" onclick="showTab('upload')">üìÅ Upload File</button>
            </div>

            <!-- URL Tab -->
            <div id="urlTab" style="display: none;">
                <div class="form-group">
                    <label>Excel File URL:</label>
                    <input type="text" id="fileUrl" placeholder="https://example.com/file.xlsx">
                </div>
                <button class="btn btn-primary" onclick="analyzeFromUrl()">üîç Analyze from URL</button>
            </div>

            <!-- Upload Tab -->
            <div id="uploadTab" style="display: none;">
                <div class="file-upload-area" id="dropArea">
                    <input type="file" id="fileInput" accept=".xlsx,.xls,.csv" style="display: none;" onchange="handleFileSelect(event)">
                    <p style="margin-bottom: 10px;">üìÅ Drop Excel file here or click to browse</p>
                    <button class="btn btn-secondary" onclick="document.getElementById('fileInput').click()">Choose File</button>
                    <p id="fileName" style="margin-top: 10px; color: #667eea; font-weight: 500;"></p>
                </div>
                <button class="btn btn-primary" onclick="analyzeFromUpload()">üîç Analyze Uploaded File</button>
            </div>

            <!-- Analysis Options -->
            <div class="form-group" style="margin-top: 20px;">
                <label style="display: flex; align-items: center; cursor: pointer;">
                    <input type="checkbox" id="detectLanguage" checked style="width: auto; margin-right: 8px;">
                    Detect Language
                </label>
                <label style="display: flex; align-items: center; cursor: pointer;">
                    <input type="checkbox" id="detectFormats" checked style="width: auto; margin-right: 8px;">
                    Detect Formats & Colors
                </label>
                <label style="display: flex; align-items: center; cursor: pointer;">
                    <input type="checkbox" id="analyzeColors" checked style="width: auto; margin-right: 8px;">
                    Analyze Colored Cells
                </label>
            </div>

            <!-- Progress -->
            <div id="analysisProgress" style="display: none;">
                <div class="progress-bar">
                    <div class="progress-fill" id="progressFill" style="width: 0%">0%</div>
                </div>
                <p style="text-align: center; color: #6b7280; font-size: 14px;" id="progressMessage">Processing...</p>
            </div>

            <!-- Response -->
            <div class="response-box" id="analyzeResponse"></div>
        </div>

        <!-- Section 3: Analysis Results -->
        <div class="section">
            <h2>üìà Step 2: View Analysis Results</h2>

            <div class="form-group">
                <label>Session ID:</label>
                <input type="text" id="sessionId" placeholder="Enter session ID from analysis">
            </div>
            <button class="btn btn-primary" onclick="getStatus()">üîÑ Get Status</button>
            <button class="btn btn-secondary" onclick="startPolling()">‚è±Ô∏è Start Auto-Refresh (2s)</button>
            <button class="btn btn-secondary" onclick="stopPolling()">‚è∏Ô∏è Stop Auto-Refresh</button>

            <div id="statusDisplay"></div>

            <!-- Statistics Cards -->
            <div id="statsCards" style="display: none;">
                <h3 style="margin: 20px 0 10px 0; font-size: 16px; color: #374151;">üìä ÂàÜÊûêÁªüËÆ°Ôºö</h3>
                <div class="stats-grid">
                    <div class="stat-card">
                        <div class="stat-value" id="statSheets">-</div>
                        <div class="stat-label">SheetÊï∞Èáè</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-value" id="statCells">-</div>
                        <div class="stat-label">ÊÄªÂçïÂÖÉÊ†º</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-value" id="statTasks">-</div>
                        <div class="stat-label">ÊÄª‰ªªÂä°Êï∞</div>
                    </div>
                </div>

                <h3 style="margin: 20px 0 10px 0; font-size: 16px; color: #374151;">üìã ‰ªªÂä°Á±ªÂûãÊòéÁªÜÔºö</h3>
                <div class="stats-grid">
                    <div class="stat-card">
                        <div class="stat-value" id="statNormalTasks">-</div>
                        <div class="stat-label">ÊôÆÈÄöÁøªËØë‰ªªÂä°</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-value" id="statYellowTasks">-</div>
                        <div class="stat-label">ÈªÑËâ≤ÈáçÁøª‰ªªÂä°</div>
                    </div>
                    <div class="stat-card">
                        <div class="stat-value" id="statBlueTasks">-</div>
                        <div class="stat-label">ËìùËâ≤Áº©Áü≠‰ªªÂä°</div>
                    </div>
                </div>
            </div>

            <div class="response-box" id="statusResponse"></div>
        </div>

        <!-- Section 4: Sheet Operations -->
        <div class="section">
            <h2>üìã Step 3: Work with Sheets</h2>

            <button class="btn btn-primary" onclick="getSheets()">üìë Get Sheets List</button>

            <div id="sheetsDisplay" style="display: none;">
                <h3 style="margin: 20px 0 10px 0; font-size: 16px; color: #374151;">Available Sheets:</h3>
                <div class="sheet-list" id="sheetsList"></div>
            </div>

            <div style="margin-top: 20px;">
                <div class="form-group">
                    <label>Sheet Name:</label>
                    <input type="text" id="sheetName" placeholder="Enter sheet name to parse">
                </div>
                <div class="form-group">
                    <label>Limit Rows (optional):</label>
                    <input type="number" id="limitRows" placeholder="e.g., 100" min="1">
                </div>
                <button class="btn btn-primary" onclick="parseSheet()">üìÑ Parse Sheet</button>
            </div>

            <div class="response-box" id="sheetResponse"></div>
        </div>

        <!-- Section 5: Data Conversion -->
        <div class="section">
            <h2>üîÑ Step 4: Convert Data</h2>

            <div style="margin-bottom: 20px;">
                <button class="btn btn-success" onclick="convertToJson()">üì¶ Convert to JSON</button>
                <button class="btn btn-success" onclick="convertToCsv()">üìÑ Convert to CSV</button>
            </div>

            <div class="form-group">
                <label>Sheet Name (for conversion):</label>
                <input type="text" id="convertSheetName" placeholder="Enter sheet name">
            </div>

            <div class="response-box" id="convertResponse"></div>
        </div>
    </div>

    <script>
        let pollingInterval = null;
        let selectedFile = null;
        let currentSessionId = null;

        // Show initial tab
        showTab('url');

        function showTab(tab) {
            document.getElementById('urlTab').style.display = tab === 'url' ? 'block' : 'none';
            document.getElementById('uploadTab').style.display = tab === 'upload' ? 'block' : 'none';
        }

        // File upload handling
        const dropArea = document.getElementById('dropArea');

        ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
            dropArea.addEventListener(eventName, preventDefaults, false);
        });

        function preventDefaults(e) {
            e.preventDefault();
            e.stopPropagation();
        }

        ['dragenter', 'dragover'].forEach(eventName => {
            dropArea.addEventListener(eventName, () => {
                dropArea.classList.add('dragover');
            }, false);
        });

        ['dragleave', 'drop'].forEach(eventName => {
            dropArea.addEventListener(eventName, () => {
                dropArea.classList.remove('dragover');
            }, false);
        });

        dropArea.addEventListener('drop', (e) => {
            const files = e.dataTransfer.files;
            if (files.length > 0) {
                selectedFile = files[0];
                document.getElementById('fileName').textContent = `Selected: ${selectedFile.name}`;
            }
        }, false);

        function handleFileSelect(event) {
            selectedFile = event.target.files[0];
            if (selectedFile) {
                document.getElementById('fileName').textContent = `Selected: ${selectedFile.name}`;
            }
        }

        function getToken() {
            const token = document.getElementById('tokenInput').value.trim();
            if (!token) {
                alert('Please enter a token first!');
                return null;
            }
            // Áõ¥Êé•ËøîÂõû tokenÔºåbackend_service ‰ºöËá™Âä®Â§ÑÁêÜ Bearer ÂâçÁºÄ
            return token;
        }

        async function analyzeFromUrl() {
            const token = getToken();
            if (!token) return;

            const fileUrl = document.getElementById('fileUrl').value.trim();
            if (!fileUrl) {
                alert('Please enter a file URL!');
                return;
            }

            const options = {
                detect_language: document.getElementById('detectLanguage').checked,
                detect_formats: document.getElementById('detectFormats').checked,
                analyze_colors: document.getElementById('analyzeColors').checked
            };

            await callMcpTool('excel_analyze', {
                token: token,
                file_url: fileUrl,
                options: options
            }, 'analyzeResponse');
        }

        async function analyzeFromUpload() {
            const token = getToken();
            if (!token) return;

            if (!selectedFile) {
                alert('Please select a file first!');
                return;
            }

            const reader = new FileReader();
            reader.onload = async function(e) {
                const base64Data = btoa(String.fromCharCode(...new Uint8Array(e.target.result)));

                const options = {
                    detect_language: document.getElementById('detectLanguage').checked,
                    detect_formats: document.getElementById('detectFormats').checked,
                    analyze_colors: document.getElementById('analyzeColors').checked
                };

                await callMcpTool('excel_analyze', {
                    token: token,
                    file: base64Data,
                    filename: selectedFile.name,
                    options: options
                }, 'analyzeResponse');
            };
            reader.readAsArrayBuffer(selectedFile);
        }

        async function getStatus() {
            const token = getToken();
            if (!token) return;

            const sessionId = document.getElementById('sessionId').value.trim();
            if (!sessionId) {
                alert('Please enter a session ID!');
                return;
            }

            currentSessionId = sessionId;
            await callMcpTool('excel_get_status', {
                token: token,
                session_id: sessionId
            }, 'statusResponse');
        }

        async function getSheets() {
            const token = getToken();
            if (!token) return;

            const sessionId = document.getElementById('sessionId').value.trim();
            if (!sessionId) {
                alert('Please enter a session ID!');
                return;
            }

            const result = await callMcpTool('excel_get_sheets', {
                token: token,
                session_id: sessionId
            }, 'sheetResponse');

            if (result && result.sheets) {
                displaySheets(result.sheets);
            }
        }

        function displaySheets(sheets) {
            const container = document.getElementById('sheetsList');
            container.innerHTML = '';

            sheets.forEach(sheet => {
                const item = document.createElement('div');
                item.className = 'sheet-item';
                item.textContent = `${sheet.name} (${sheet.rows}√ó${sheet.cols})`;
                item.onclick = () => {
                    document.getElementById('sheetName').value = sheet.name;
                    document.getElementById('convertSheetName').value = sheet.name;
                };
                container.appendChild(item);
            });

            document.getElementById('sheetsDisplay').style.display = 'block';
        }

        async function parseSheet() {
            const token = getToken();
            if (!token) return;

            const sessionId = document.getElementById('sessionId').value.trim();
            const sheetName = document.getElementById('sheetName').value.trim();

            if (!sessionId || !sheetName) {
                alert('Please enter session ID and sheet name!');
                return;
            }

            const limit = document.getElementById('limitRows').value;
            const args = {
                token: token,
                session_id: sessionId,
                sheet_name: sheetName
            };

            if (limit) {
                args.limit = parseInt(limit);
            }

            await callMcpTool('excel_parse_sheet', args, 'sheetResponse');
        }

        async function convertToJson() {
            const token = getToken();
            if (!token) return;

            const sessionId = document.getElementById('sessionId').value.trim();
            const sheetName = document.getElementById('convertSheetName').value.trim();

            if (!sessionId) {
                alert('Please enter session ID!');
                return;
            }

            const args = {
                token: token,
                session_id: sessionId
            };

            if (sheetName) {
                args.sheet_name = sheetName;
            }

            await callMcpTool('excel_convert_to_json', args, 'convertResponse');
        }

        async function convertToCsv() {
            const token = getToken();
            if (!token) return;

            const sessionId = document.getElementById('sessionId').value.trim();
            const sheetName = document.getElementById('convertSheetName').value.trim();

            if (!sessionId || !sheetName) {
                alert('Please enter session ID and sheet name!');
                return;
            }

            await callMcpTool('excel_convert_to_csv', {
                token: token,
                session_id: sessionId,
                sheet_name: sheetName
            }, 'convertResponse');
        }

        async function callMcpTool(toolName, args, responseElementId) {
            const responseElement = document.getElementById(responseElementId);
            responseElement.innerHTML = '<pre>‚è≥ Processing...</pre>';

            try {
                // Call MCP HTTP Gateway
                const response = await fetch('/mcp/tool', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        tool: toolName,
                        arguments: args
                    })
                });

                if (!response.ok) {
                    throw new Error(`HTTP ${response.status}: ${response.statusText}`);
                }

                const result = await response.json();

                // Check for errors
                if (result.error) {
                    throw new Error(result.error.message || result.error);
                }

                // Update response display
                responseElement.innerHTML = `<pre>${JSON.stringify(result, null, 2)}</pre>`;

                // Handle specific responses
                if (toolName === 'excel_analyze' && result.session_id) {
                    document.getElementById('sessionId').value = result.session_id;
                    currentSessionId = result.session_id;

                    // Show progress and start polling
                    document.getElementById('analysisProgress').style.display = 'block';
                    startPolling();
                }

                if (toolName === 'excel_get_status' && result.status === 'completed') {
                    updateStats(result.result);
                    stopPolling();
                }

                return result;
            } catch (error) {
                responseElement.innerHTML = `<pre style="color: #dc2626;">‚ùå Error: ${error.message}</pre>`;
                return null;
            }
        }


        function updateStats(result) {
            if (!result || !result.file_info) return;

            const stats = result.statistics || {};
            const taskBreakdown = stats.task_breakdown || {};

            // Âü∫Êú¨ÁªüËÆ°
            document.getElementById('statSheets').textContent = result.file_info.sheet_count || 0;
            document.getElementById('statCells').textContent = stats.total_cells || 0;
            document.getElementById('statTasks').textContent = stats.estimated_tasks || 0;

            // ‰ªªÂä°Á±ªÂûãÊòéÁªÜ
            document.getElementById('statNormalTasks').textContent = taskBreakdown.normal_tasks || 0;
            document.getElementById('statYellowTasks').textContent = taskBreakdown.yellow_tasks || 0;
            document.getElementById('statBlueTasks').textContent = taskBreakdown.blue_tasks || 0;

            document.getElementById('statsCards').style.display = 'block';
        }

        function startPolling() {
            if (pollingInterval) return;

            pollingInterval = setInterval(() => {
                if (currentSessionId || document.getElementById('sessionId').value) {
                    getStatus();
                }
            }, 2000);
        }

        function stopPolling() {
            if (pollingInterval) {
                clearInterval(pollingInterval);
                pollingInterval = null;
            }
        }

        window.addEventListener('beforeunload', () => {
            stopPolling();
        });
    </script>
</body>
</html>
