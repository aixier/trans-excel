service:
  host: "0.0.0.0"
  port: 8001
  debug: false

buffer:
  max_buffer_size: 1000
  flush_interval: 30

database:
  host: "localhost"
  port: 3306
  user: "root"
  password: ""
  database: "ai_terminal"
  pool_size: 10
  pool_min_size: 5
  pool_recycle: 3600

logging:
  level: "INFO"
  format: "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
  file: "logs/persistence_service.log"
  max_bytes: 10485760  # 10MB
  backup_count: 5